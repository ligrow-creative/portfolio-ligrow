@charset "UTF-8";

@font-face {
  font-family: {{fontName}};
  src: {{unescape-double-quote src}};
  font-style: normal;
  font-weight: normal;
  font-display: swap;
}

{{baseSelector}} {
  display: inline-block;
  font-family: {{fontName}};
  font-style: normal;
  font-weight: normal;
  line-height: inherit;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

{{#each codepoints as |item|}}
{{../baseSelector}}-{{item.[0]}}::before {
  content: "\\{{item.[1]}}"
}

{{/each}}
